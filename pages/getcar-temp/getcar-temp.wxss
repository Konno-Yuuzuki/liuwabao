@import '../loading-temp/loading-temp.wxss';

.getCar-mask {
  background: rgba(0, 0, 0, 0.5);
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
}

.getCar-container {
  width: 80%;
  height: 70%;
  background-color: #fff;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  border-radius: 24rpx;
  /* padding-bottom: 34rpx; */
}

.getCar-container .getCar-now {
  font-size: 50rpx;
  margin-top: 42rpx;
}

.getCar-container .getCar-hint {
  font-size: 32rpx;
  margin-top: 24rpx;
  color: #545454;
}

.getCar-container .getCar-img {
  width: 300rpx;
  height: 200rpx;
  margin-top: 54rpx;
}

.getCar-container .getCar-operation {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 22rpx;
}

.getCar-container .getCar-line {
  width: 80%;
  height: 8rpx;
  background-image: linear-gradient(to right, #feeb00 0%, #fcd200 100%);
  margin-top: 24rpx;
}

.getCar-container .canvas-container {
  width: 108rpx;
  height: 108rpx;
}

.getCar-container .circle {
  margin-top: 34rpx;
}
