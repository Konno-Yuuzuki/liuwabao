.head-wrapper {
  display: flex;
  width: 100%;
  height: 80rpx;
  background: #fff;
  align-items: center;
  padding-left: 30rpx;
  /* opacity: 0.7; */
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1000;
}

.head-wrapper .user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 60rpx;
  margin-right: 18rpx;
}

.head-wrapper .user-text {
  font-size: 30rpx;
  line-height: 60rpx;
}

.head-wrapper .gift {
  position: absolute;
  right: 60rpx;
  width: 40rpx;
  height: 40rpx;
}

.head-wrapper .gift-num {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  font-size: 30rpx;
  vertical-align: bottom;
}
