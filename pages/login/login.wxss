.login-wrapper {
  position: relative;
  background: #fff;
}

.login-wrapper .bg-image {
  width: 100%;
  height: 422rpx;
}

.login-wrapper .logo {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 180rpx;
  height: 42rpx;
}

.login-wrapper .input-wrapper {
  position: relative;
  box-sizing: border-box;
  padding: 0 44rpx;
}

.input-wrapper .input-item {
  position: relative;
  border-bottom: 1rpx solid #e6e6e6;
}

.input-wrapper  .post-code {
  position: absolute;
  right: 55rpx;
  top: 110rpx;
  font-size: 26rpx;
  padding: 20rpx;
  z-index: 10;
}

.input-wrapper .input-item .input-icon {
  position: absolute;
  top: 30rpx;
  width: 24rpx;
  height: 34rpx;
}

.input-wrapper .input-item .input-con {
  margin-left: 60rpx;
  height: 90rpx;
  font-size: 30rpx;
  color: #666;
}

.input-wrapper .placeholder-class {
  color: #ccc;
  font-size: 30rpx;
}

.input-wrapper .login-btn-wrapper {
  margin-top: 90rpx;
}

.input-wrapper .login-btn {
  width: 604rpx;
  height: 88rpx;
  margin-left: 32rpx;
  
}

.input-wrapper .text-wrapper {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #ccc;
  text-align: center;
}

.input-wrapper .text-wrapper .contract {
  color: #f5bd12;
}

.wechat-wrapper {
  position: fixed;
  width: 100%;
  bottom: 60rpx;
}

.wechat-wrapper .wehchat-fix {
  display: flex;
  justify-content: center;
  width: 250rpx;
  height: 86rpx;
  background: #fff;
}


.wechat-wrapper .wehchat-fix::after {
  border: 0;
}

.wechat-wrapper .wechat-logo {
  width: 70rpx;
  height: 70rpx;
  margin-top: 8rpx;
}

.wechat-wrapper .text {
  line-height: 86rpx;
  font-size: 28rpx;
  /* color: #999; */
}

.text-wrapper{
  margin-top: 50rpx;
  font-size: 24rpx;
}

.text-wrapper .text{
   color: #454545; 
  
}